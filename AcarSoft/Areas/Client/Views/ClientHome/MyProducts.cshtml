@{
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}
@using AcarSoft.Areas.Client.Models;
@model ClientPurchases;

<!DOCTYPE html>
<html>
<head>
    <title>My Products</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/jquery-3.6.1.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
        }

        .list-group-item {
            font-size: 20px;
            font-weight: bold;
        }
        .filler{
            height: 300px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">My Products:</a>
    </nav>
    <div class="container mt-4">
        <ul class="list-group">

            @foreach(var item in Model.purchases)
            {
                DateTime expire = new DateTime();
                expire = item.PurchaseDate.AddMonths(item.PurchaseDuration);
                <li class="list-group-item">@item.Product.ProductName</li>
                <h4>Expire Date: @expire</h4>
            }
            
        </ul>
    </div>
    <div class="filler"></div>
</body>
</html>
