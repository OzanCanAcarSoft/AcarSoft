@{
    Model.Entities.Client loggedclient = ViewBag.LoggedClient as Model.Entities.Client;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Site İsmi</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <a class="navbar-brand" href="/Client/ClientHome/Index"><b>Acar</b> Software</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/Client/ClientHome/Projects" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Client/ClientHome/AboutUs" class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Client/ClientHome/Contact" class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Contact</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: black">
                                Profile
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" id="myProfile"href="#">Edit Profile</a></li>
                                <li><a class="dropdown-item" id=""href="/Client/ClientHome/MyProducts">My Products</a></li>
                                <li><a class="dropdown-item" id ="logout"href="#">Log Out</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <img src="~/Pictures/@loggedclient.PhotoPath" width="40" height="30" />
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container py-4">
        @RenderBody()
    </div>
    <footer class="border-top py-3">
        <div class="container text-center">
           <b>Acar</b> Software &copy; 2020 - All rights reserved.
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/jquery-3.6.1.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#logout").click(function(){
                Swal.fire({
                    title: 'Are you sure to log out?',
                    showDenyButton: true,
                    confirmButtonText: 'Yes',
                    denyButtonText: `No`,
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "/Home/Index"
                    }
                })
            })

            $("#myProfile").click(function(){
                window.location.href = "/Client/ClientHome/Profile"
            })
        })
    </script>
</body>
</html>
