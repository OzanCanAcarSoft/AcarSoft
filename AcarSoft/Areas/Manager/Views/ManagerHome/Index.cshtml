
@{
    Model.Entities.Manager manag = ViewBag.Manager as Model.Entities.Manager;
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
    List<Model.Entities.Manager> manags = ViewBag.Managers as List<Model.Entities.Manager>;
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome to AcarSoft</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/lib/jquery/jquery.min.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
        
        img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .projects {
            width: 400px;
            height: 200px
        }

        #dropdown-menu {
            display: none;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="w3-display-container w3-content w3-wide" style="max-width:1500px;" id="home">
        <img class="w3-image" src="~/pictures/architect.jpg" alt="Software" width="1500" height="800">
        <div class="w3-display-middle w3-margin-top w3-center">
            <h1 class="w3-xxlarge w3-text-white"><span class="w3-padding w3-black w3-opacity-min"><b>ACAR</b></span> <span class="w3-hide-small w3-text-light-grey">Software</span></h1>
            <div>
                <br />
            </div>
            <h2 class="w3-xxlarge w3-text-white"><span class="w3-padding w3-black w3-opacity-min"><b>Together</b></span> <span class="w3-hide-small w3-text-light-grey">To</span><span class="w3-padding w3-black w3-opacity-min"><b>Tomorrow</b></span></h2>
        </div>
    </header>

    <!-- Page content -->
    <div class="w3-content w3-padding" style="max-width:1564px">

        <!-- Project Section -->
        <div class="w3-container w3-padding-32" id="projects">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16"><a href="/Manager/ManagerHome/Projects">Projects</a></h3>
        </div>

        <div class="w3-row-padding">
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">ChoreNet</div>
                    <img src="~/pictures/ChoreNet.jpg" alt="Desktop" class="projects">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">SentAct</div>
                    <img src="~/pictures/SentAct.jpg" alt="AI" class="projects">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">AcarNet</div>
                    <img src="~/pictures/acarnet.jpg" alt="Network" class="projects">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">Accoultant</div>
                    <img src="~/pictures/accoultant.jpg" alt="Account" class="projects">
                </div>
            </div>
        </div>

        <div class="w3-row-padding">
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">ChoreNet</div>
                    <img src="~/pictures/ChoreNet 2.jpg" alt="Desktop">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">SentAct</div>
                    <img src="~/pictures/SentAct 2.jpg" alt="AI">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">AcarNet</div>
                    <img src="~/pictures/acarnet 2.jpg" alt="Network">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">Accoultant</div>
                    <img src="~/pictures/accoultant 2.jpg" alt="Acoount">
                </div>
            </div>
        </div>
        </div>
        <!-- About Section -->
        <div class="w3-container w3-padding-32" id="about">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16"><span><a href="/Manager/ManagerHome/AboutUs">About</a></span></h3>
            <p>
                &emsp;
                AcarSoft® is a software company established in 2020. Acarsoft® was established by Ozan Can ACAR, who is also currently the Founder & CEO & CFEO. AcarSoft® produces general-various software products for Desktop Applications, Artificial Intelligence(AI)-supported software systems and Networks.
                <span><br /></span>
                &emsp; Our mission is to help provide better computer experience using our enhanced software product capabilities.
                <span><br /></span>
                &emsp; Our vision is to help people, working with people. All together, all to tomorrow.
            </p>
        </div>

        <div class="w3-row-padding w3-grayscale">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16"><span><a href="/Manager/ManagerHome/AboutUs">Our Team</a></span></h3>

            @foreach (var man in manags)
            {
                <div class="w3-col l3 m6 w3-margin-bottom fill">
                    <img src="~/pictures/@man.PhotoPath" width="300" height="250"/>
                    <h3 class="editing">@man.FullName</h3>
                    <p class="w3-opacity">@man.Profession</p>
                <p><button type="button" class="w3-button w3-light-grey w3-block btnEdittttt" manId="@man.Id">Edit</button></p>
                </div>
            }

            <!-- Image of location/map -->
            <div class="w3-container">
                <img src="~/pictures/everything is possible.jpg" class="w3-image" style="width:100% height:90%">
            </div>
            <!-- End page content -->
        </div>
        
        <script>
            $(document).ready(function(){
                $(".btnEdittttt").click(function () {
                    var manid = $(this).attr("manId")
                    $.ajax({
                    url: "/Manager/ManagerHome/Select",
                    method: "post",
                    datatype: "json",
                    data: {id: manid},
                    success: function(result){
                        window.location.href = "/Manager/ManagerHome/Edit";
                    }
                    })
                })
            })
        </script>
</body>
</html>




